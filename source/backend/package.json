{
  "name": "cyber-pilot-backend",
  "version": "1.0.0",
  "description": "NestJS API boilerplate based on cyber-pilot-api architecture",
  "author": "Cyber Pilot",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:create": "yarn mikro-orm migration:create",
    "migration:up": "yarn mikro-orm migration:up",
    "migration:down": "yarn mikro-orm migration:down",
    "migration:list": "yarn mikro-orm migration:list",
    "migration:check": "yarn mikro-orm migration:check",
    "migration:pending": "yarn mikro-orm migration:pending",
    "migration:fresh": "yarn mikro-orm migration:fresh",
    "seeder:run": "yarn mikro-orm seeder:run",
    "seeder:create": "yarn mikro-orm seeder:create"
  },
  "dependencies": {
    "@bull-board/api": "^5.21.3",
    "@bull-board/express": "^5.21.3",
    "@bull-board/nestjs": "^5.21.3",
    "@bull-board/ui": "^5.21.3",
    "@fast-csv/parse": "^4.3.6",
    "@mikro-orm/cli": "6.3.13",
    "@mikro-orm/core": "6.3.13",
    "@mikro-orm/migrations": "6.3.13",
    "@mikro-orm/nestjs": "^6.0.2",
    "@mikro-orm/postgresql": "6.3.13",
    "@nestjs/bull": "^10.2.0",
    "@nestjs/common": "^10.4.16",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.10",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/platform-express": "^10.3.10",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/terminus": "^10.2.3",
    "bull": "^4.11.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "exceljs": "^4.4.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.46",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@hkdobrev/run-if-changed": "^0.5.0",
    "@mikro-orm/seeder": "6.3.13",
    "@nestjs/cli": "^10.4.4",
    "@nestjs/testing": "^10.3.10",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.3.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^29.2.4",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ],
    "moduleNameMapping": {
      "^@api/(.*)$": "<rootDir>/src/$1"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  },
  "run-if-changed": {
    "yarn.lock": "yarn install"
  },
  "mikro-orm": {
    "useTsNode": true,
    "tsConfigPath": "./tsconfig.json",
    "configPaths": [
      "./dist/src/config/orm.js",
      "./src/config/orm.ts"
    ]
  },
  "packageManager": "yarn@4.9.2"
}
